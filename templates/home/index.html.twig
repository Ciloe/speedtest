{% extends 'base.html.twig' %}

{% block title %}Speedtest maison{% endblock %}

{% block body %}
    <main>
        <div class="px-4 sm:px-6 lg:px-8 py-8 w-full max-w-9xl mx-auto">
            <div class="grid grid-cols-12 gap-6">
                <div class="flex flex-col col-span-full sm:col-span-4 bg-white shadow-lg rounded-sm border border-gray-200">
                    <header class="px-5 py-4 border-b border-gray-100 flex items-center">
                        <h2 class="font-semibold text-gray-800">Upload</h2>
                    </header>
                    <div class="flex-grow">
                        {{ render_chart(chart_upload) }}
                    </div>
                </div>
                <div class="flex flex-col col-span-full sm:col-span-4 bg-white shadow-lg rounded-sm border border-gray-200">
                    <header class="px-5 py-4 border-b border-gray-100 flex items-center">
                        <h2 class="font-semibold text-gray-800">Download</h2>
                    </header>
                    <div class="flex-grow">
                        {{ render_chart(chart_download) }}
                    </div>
                </div>
                <div class="flex flex-col col-span-full sm:col-span-4 bg-white shadow-lg rounded-sm border border-gray-200">
                    <header class="px-5 py-4 border-b border-gray-100 flex items-center">
                        <h2 class="font-semibold text-gray-800">Latency</h2>
                    </header>
                    <div class="flex-grow">
                        {{ render_chart(chart_latency) }}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
